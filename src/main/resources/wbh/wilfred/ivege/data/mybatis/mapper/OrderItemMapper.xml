<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wbh.wilfred.ivege.data.mybatis.mapper.OrderItemMapper">
    <resultMap id="OrderItemMap" type="OrderItem">
        <id property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="productId" column="product_id"/>
        <result property="amount" column="amount"/>
    </resultMap>
    <select id="getOrderItemById" resultMap="OrderItemMap">
        SELECT * FROM order_item WHERE id = #{id} LIMIT 1
    </select>
    <select id="getOrderItemByOrderId" resultMap="OrderItemMap">
        SELECT * FROM order_item WHERE order_id = #{id}
    </select>
    <insert id="addOrderItems" parameterType="java.util.List">
        INSERT INTO order_item (order_id, product_id, amount)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.orderId}, #{item.productId}, #{item.amount})
        </foreach>
    </insert>
</mapper>